package com.example.demo.controllers;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import com.example.demo.entities.Club;
import com.example.demo.services.ClubService;

@RestController
@RequestMapping("/clubs")
@CrossOrigin
public class ClubController {

    @Autowired
    private ClubService clubService;

    @GetMapping("/active")
    public List<Club> getActiveClubs() {
        return clubService.getAllActiveClubs();
    }

    @GetMapping("/inactive")
    public List<Club> getInactiveClubs() {
        return clubService.getAllInactiveClubs();
    }

    @GetMapping("/{id}")
    public Club getClubDetails(@PathVariable int id) {
        return clubService.getClubDetails(id).orElse(null);
    }

    @PutMapping("/approve/{id}")
    public Club approveClub(@PathVariable int id) {
        return clubService.approveClub(id);
    }
}
