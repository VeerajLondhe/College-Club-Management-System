@RestController
@RequestMapping("/clubs")
@CrossOrigin(origins = "*")
public class ClubController {

    @Autowired
    private ClubService clubService;

    @GetMapping("/active")
    public List<Club> getActiveClubs() {
        return clubService.getAllActiveClubs();
    }

    @GetMapping("/inactive")
    public List<Club> getInactiveClubs() {
        return clubService.getAllInactiveClubs();
    }

    @GetMapping("/{cid}")
    public Club getClubById(@PathVariable int cid) {
        return clubService.getClubById(cid);
    }

    @PutMapping("/approve/{cid}")
    public Club approveClub(@PathVariable int cid) {
        return clubService.approveClub(cid);
    }
}
